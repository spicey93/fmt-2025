---
const { heroHeading, heroSubheading, heroBgImg } = Astro.props;
---

<section id="hero" class="d-flex align-items-center py-5">
  <div class="container">
    <div
      class="text-center d-flex justify-content-center flex-column align-items-center text-light"
    >
      <p class="display-3 fw-bold">{heroHeading}</p>
      <p class="lead fs-3">{heroSubheading}</p>
      <span class="lead mb-2"><i class="bi bi-calendar-check me-2"></i>Open 7 Days a Week</span>
      <span class="lead mb-2"><i class="bi bi-clock me-2"></i>Same Day Service</span>
      <span class="lead mb-2"><i class="bi bi-truck me-2"></i>We Come to You</span>
      <div
        class="d-flex flex-column flex-md-row justify-content-md-center align-items-md-center mt-3"
      >
        <a href="tel:08007311260" class="btn btn-warning fw-bold btn-lg"
          ><i class="bi bi-telephone-fill me-2"></i>Call Now</a
        >
        <button
          class="mt-3 mt-md-0 ms-md-3 btn btn-outline-light fw-bold btn-lg"
          type="button"
          data-bs-toggle="modal"
          data-bs-target="#quoteModal"
          ><i class="bi bi-envelope-fill me-2"></i>Message Us</button
        >
      </div>
    </div>
  </div>
</section>

<!-- Modal -->
<div class="modal fade" id="quoteModal" tabindex="-1" aria-labelledby="quoteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <p class="modal-title fw-bold fs-5" id="exampleModalLabel">Message Us</p>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <script src="https://static.elfsight.com/platform/platform.js" async
            ></script>
            <div
              class="elfsight-app-2bbca0d6-1339-45a3-9a9b-fa66c2450670"
              data-elfsight-app-lazy
            >
        </div>

      </div>
    </div>
  </div>


<style define:vars={{ heroBgImg }}>
  #hero {
    background-image: var(--heroBgImg);
    background-size: cover;
    background-position: center;
    min-height: 80vh;
    box-shadow: inset 0 0 0 2000px rgba(33, 37, 41, 0.85);
  }
</style>
