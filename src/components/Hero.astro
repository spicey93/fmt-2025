---
const { heroHeading, heroSubheading, heroBgImg } = Astro.props;
---

<section id="hero" class="d-flex align-items-center py-5">
  <div class="container">
    <div class="row">
      <div
        class="text-center text-lg-start d-flex justify-content-center justify-content-lg-start flex-column align-items-center align-items-lg-start text-light col-12 col-lg-6 mb-5 mb-lg-0"
      >
        <p class="display-3 fw-bold">{heroHeading}</p>
        <p class="lead fs-3">{heroSubheading}</p>
        <span class="lead mb-2 d-lg-none"><i class="bi bi-calendar-check me-2"></i>Open 7 Days a Week</span>
        <span class="lead mb-2 d-lg-none"><i class="bi bi-clock me-2"></i>Same Day Service</span>
        <span class="lead mb-2 d-lg-none"><i class="bi bi-truck me-2"></i>We Come to You</span>
        <div class="row bg-light rounded-3 text-dark ms-0 mt-3">
          <div class="col-3 p-3 d-flex align-items-center">
              <img
                  src="https://seeklogo.com/images/G/google-logo-28FA7991AF-seeklogo.com.png"
                  alt=""
                  width="35"
              />
          </div>
          <div class="col-9 p-3">
              <p class="mb-0">Google</p>
              <p class="h5 mb-0">
                  4.9 <i class="bi bi-star-fill text-warning"></i>
                  <i class="bi bi-star-fill text-warning"></i>
                  <i class="bi bi-star-fill text-warning"></i>
                  <i class="bi bi-star-fill text-warning"></i>
                  <i class="bi bi-star-fill text-warning"></i>
              </p>
              <p class="mb-0 small">Based on 684 reviews</p>
          </div>
      </div>
      </div>
      <div class="col-lg-4 offset-lg-2 col-12 d-flex align-items-center justify-content-end flex-column">
        <script src="https://static.elfsight.com/platform/platform.js" async
        ></script>
        <div
          class="elfsight-app-2bbca0d6-1339-45a3-9a9b-fa66c2450670 bg-light p-4 rounded"
          data-elfsight-app-lazy
        >
      </div>
      <p class="text-white mt-3 text-center">
        Need help out of hours? <br />
        <span class="fw-bold fs-5"
            >Call <a href="tel:08007311260" class="link-light"
                >0800 7311 260</a
            ></span>
    </p>
    </div>
  </div>
</section>



<style define:vars={{ heroBgImg }}>
  #hero {
    background-image: var(--heroBgImg);
    background-size: cover;
    background-position: center;
    min-height: 80vh;
    box-shadow: inset 0 0 0 2000px rgba(33, 37, 41, 0.85);
  }
</style>
